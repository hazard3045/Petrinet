public class Edge_drainer extends Edge{
    private Transition output;
    private Place input;

    public Edge_drainer(Vertex in, Vertex out){
        super(0,in,out);
        this.input = in;
        this.output = out;
    }

    @Override
    public void mod_input(){
        this.input.empty();
    }

    @Override
    public void mod_output(){}

    @Override
    public boolean is_fireable(){
        int tok = this.input.get_tokens();
        if (tok > 1){
            return true;
        }
        else { 
            return false; 
        }
    }
}